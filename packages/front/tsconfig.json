{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "esnext",
      "es2017",
      "dom"
    ],
    "rootDir": "src",
    "allowJs": true,
    "removeComments": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src"
  ]
}
